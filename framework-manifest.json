{
  "name": "IDPF Framework",
  "version": "0.40.0",
  "description": "Iterative Development Process Frameworks for AI-assisted software development",
  "created": "2025-11-30",
  "frameworks": [
    "IDPF-Agile",
    "IDPF-Vibe"
  ],
  "domainSpecialists": [
    "Accessibility-Specialist",
    "API-Integration-Specialist",
    "Backend-Specialist",
    "Cloud-Solutions-Architect",
    "Database-Engineer",
    "Data-Engineer",
    "Desktop-Application-Developer",
    "DevOps-Engineer",
    "Embedded-Systems-Engineer",
    "Frontend-Specialist",
    "Full-Stack-Developer",
    "Game-Developer",
    "Graphics-Engineer-Specialist",
    "ML-Engineer",
    "Mobile-Specialist",
    "Performance-Engineer",
    "Platform-Engineer",
    "QA-Test-Engineer",
    "Security-Engineer",
    "SRE-Specialist",
    "Systems-Programmer-Specialist",
    "Technical-Writer-Specialist"
  ],
  "requiredDirectories": [
    "Overview",
    "Assistant",
    "System-Instructions",
    "Skills"
  ],
  "deploymentFiles": {
    "commands": {
      "source": ".claude/commands/",
      "core": [
        "change-domain-expert.md",
        "install-skill.md",
        "playwright-check.md"
      ],
      "workflow": [
        "assign-branch.md",
        "switch-branch.md",
        "transfer-issue.md",
        "create-branch.md",
        "prepare-release.md",
        "prepare-beta.md",
        "merge-branch.md",
        "destroy-branch.md",
        "charter.md",
        "extensions.md",
        "create-prd.md",
        "create-backlog.md",
        "complete-prd.md",
        "add-story.md",
        "split-story.md",
        "pivot.md",
        "work.md",
        "done.md",
        "bug.md",
        "enhancement.md",
        "proposal.md",
        "resolve-review.md",
        "review-issue.md",
        "review-prd.md",
        "review-proposal.md",
        "review-test-plan.md"
      ]
    },
    "scripts": {
      "shared": {
        "source": "Templates/scripts/shared/",
        "target": ".claude/scripts/shared/",
        "files": [
          "analyze-commits.js",
          "assign-branch.js",
          "cleanup-release-assets.js",
          "extensions-cli.js",
          "generate-changelog.js",
          "install-skill.js",
          "generate-test-plan.js",
          "recommend-version.js",
          "switch-branch.js",
          "transfer-issue.js",
          "update-release-notes.js",
          "wait-for-ci.js"
        ]
      },
      "shared/lib": {
        "source": "Templates/scripts/shared/lib/",
        "target": ".claude/scripts/shared/lib/",
        "files": [
          "gh.js",
          "git.js",
          "output.js"
        ]
      },
      "hooks": {
        "source": "Templates/hooks/",
        "target": ".claude/hooks/",
        "files": [
          "workflow-trigger.js"
        ]
      }
    },
    "rules": {
      "always": [
        "01-anti-hallucination.md",
        "03-startup.md",
        "04-charter-enforcement.md",
        "06-runtime-triggers.md"
      ],
      "conditional": {
        "enableGitHubWorkflow": [
          "02-github-workflow.md"
        ],
        "windows": [
          "05-windows-shell.md"
        ]
      }
    },
    "metadata": {
      "source": ".claude/metadata/",
      "target": ".claude/metadata/",
      "registries": [
        {
          "name": "skill-registry",
          "source": ".claude/metadata/skill-registry.json",
          "description": "Skill registry for /install-skill command"
        },
        {
          "name": "extension-recipes",
          "source": ".claude/metadata/extension-recipes.json",
          "description": "Extension recipes for /extensions recipes command"
        },
        {
          "name": "extension-points",
          "source": ".claude/metadata/extension-points.json",
          "description": "Extension point registry for command introspection"
        },
        {
          "name": "review-extensions",
          "source": ".claude/metadata/review-extensions.json",
          "description": "Review command domain extension criteria registry"
        },
        {
          "name": "skill-keywords",
          "source": ".claude/metadata/skill-keywords.json",
          "description": "Keyword-to-skill mappings for /create-backlog and /add-story"
        },
        {
          "name": "recipe-tech-mapping",
          "source": ".claude/metadata/recipe-tech-mapping.json",
          "description": "Tech stack to recipe mappings for /charter suggestions"
        }
      ]
    }
  },
  "extensibleCommands": [
    "bug",
    "create-branch",
    "create-prd",
    "destroy-branch",
    "done",
    "enhancement",
    "merge-branch",
    "prepare-beta",
    "prepare-release",
    "proposal",
    "review-issue",
    "review-prd",
    "review-proposal",
    "work"
  ],
  "managedCommands": [
    "assign-branch",
    "switch-branch",
    "transfer-issue",
    "charter",
    "extensions",
    "install-skill",
    "resolve-review",
    "review-test-plan"
  ]
}
